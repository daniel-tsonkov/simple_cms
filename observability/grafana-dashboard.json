{
  "dashboard": {
    "title": "Simple CMS Metrics",
    "tags": ["simple-cms", "devops"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (req/s)",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "rate(http_requests_total{namespace=\"simple-cms\"}[5m])",
            "legendFormat": "{{method}} {{route}}"
          }
        ],
        "yaxes": [
          { "format": "reqps", "label": "Requests/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 2,
        "title": "Request Duration (p95)",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{namespace=\"simple-cms\"}[5m]))",
            "legendFormat": "p95 - {{method}} {{route}}"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{namespace=\"simple-cms\"}[5m]))",
            "legendFormat": "p50 - {{method}} {{route}}"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Duration" },
          { "format": "short" }
        ]
      },
      {
        "id": 3,
        "title": "Error Rate (%)",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{namespace=\"simple-cms\",status_code=~\"5..\"}[5m])) / sum(rate(http_requests_total{namespace=\"simple-cms\"}[5m])) * 100",
            "legendFormat": "Error Rate"
          }
        ],
        "yaxes": [
          { "format": "percent", "label": "Error %" },
          { "format": "short" }
        ]
      },
      {
        "id": 4,
        "title": "Active Connections",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "active_connections{namespace=\"simple-cms\"}",
            "legendFormat": "{{pod}}"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Connections" },
          { "format": "short" }
        ]
      },
      {
        "id": 5,
        "title": "Pod Restarts",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 16 },
        "targets": [
          {
            "expr": "sum(kube_pod_container_status_restarts_total{namespace=\"simple-cms\"})"
          }
        ]
      },
      {
        "id": 6,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 20 },
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{namespace=\"simple-cms\"}[5m])",
            "legendFormat": "{{pod}}"
          }
        ],
        "yaxes": [
          { "format": "percentunit", "label": "CPU" },
          { "format": "short" }
        ]
      },
      {
        "id": 7,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 20 },
        "targets": [
          {
            "expr": "container_memory_usage_bytes{namespace=\"simple-cms\"}",
            "legendFormat": "{{pod}}"
          }
        ],
        "yaxes": [
          { "format": "bytes", "label": "Memory" },
          { "format": "short" }
        ]
      }
    ],
    "refresh": "10s",
    "schemaVersion": 16,
    "version": 1
  }
}